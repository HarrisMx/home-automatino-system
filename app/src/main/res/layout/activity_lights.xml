<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/bg"
    android:layout_height="match_parent"
    tools:context=".lights">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:paddingRight="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appliance Control : Lights"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/light"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:text="Kitchen"
                    android:textSize="16sp"
                    android:textStyle = "bold"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/fan"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:text="Sitting Room"
                    android:textStyle = "bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/door"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Dining Room"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/study"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Study Room"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/by"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Back Yard"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />
                <Switch
                    android:id="@+id/br1"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Bed Room 1"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/br2"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Bed Room 2"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/visitors"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Visitors Room"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />

                <Switch
                    android:id="@+id/clear"
                    android:layout_width="332dp"
                    android:layout_height="55dp"
                    android:textStyle = "bold"
                    android:text="Clear All"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="47dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>